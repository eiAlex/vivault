{
    "manifest_version": 3,
    "name": "ViVault",
    "version": "1.0.0",
    "description": "Password manager and vault for secure storage of sensitive information, with autocomplete.",
    "permissions": [
        "storage",
        "activeTab",
        "tabs",
        "webNavigation",
        "scripting"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content-script.js"
            ],
            "css": [
                "content-style.css"
            ]
        }
    ],
    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": {
            "16": "icons/bloqueio-nfc-16.png",
            "32": "icons/bloqueio-nfc-32.png",
            "64": "icons/bloqueio-nfc-64.png",
            "128": "icons/bloqueio-nfc-128.png"
        }
    }
}